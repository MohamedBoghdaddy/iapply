{
  "version": 2,
  "builds": [
    {
      "src": "src/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "services/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "src/frontend/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGO_URL": "@mongo-url",
    "JWT_SECRET": "@jwt-secret",
    "ANTHROPICS_API_KEY": "@anthropics-api-key"
  }
}
